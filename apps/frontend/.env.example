# PeopleCoin Frontend - Environment Variables Template
# Copy this file to .env and fill in your values

# ==========================================
# API Configuration
# ==========================================

# Backend API URL
VITE_API_URL=http://localhost:8080
# Production example: https://api.peoplecoin.com

# ==========================================
# Application Configuration
# ==========================================

# Environment
NODE_ENV=development  # Options: development, production

# Application metadata
VITE_APP_NAME=PeopleCoin
VITE_APP_VERSION=1.0.0

# ==========================================
# Blockchain Configuration
# ==========================================

# Sui Network
VITE_SUI_NETWORK=mainnet  # Options: mainnet, testnet, devnet

# Sui RPC URL (used by wallet adapters)
VITE_SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
# Alternative RPC endpoints:
# - Testnet: https://fullnode.testnet.sui.io:443
# - Devnet: https://fullnode.devnet.sui.io:443

# ==========================================
# Wallet Configuration
# ==========================================

# Enable wallet connections
VITE_ENABLE_WALLET_CONNECT=true

# Supported wallets (comma-separated)
VITE_SUPPORTED_WALLETS=Sui Wallet,Suiet,Ethos

# ==========================================
# Feature Flags
# ==========================================

# Enable features
VITE_ENABLE_TRADING=true
VITE_ENABLE_TOKEN_CREATION=true
VITE_ENABLE_PORTFOLIO=true
VITE_ENABLE_NOTIFICATIONS=true

# Enable debug mode
VITE_DEBUG_MODE=false  # Set to true for verbose logging

# ==========================================
# Analytics (Optional)
# ==========================================

# Google Analytics
VITE_GA_TRACKING_ID=  # e.g., G-XXXXXXXXXX

# Mixpanel
VITE_MIXPANEL_TOKEN=  # Your Mixpanel token

# ==========================================
# Third-Party Services (Optional)
# ==========================================

# Sentry Error Tracking
VITE_SENTRY_DSN=  # Your Sentry DSN
VITE_SENTRY_ENVIRONMENT=development

# Intercom Support Chat
VITE_INTERCOM_APP_ID=  # Your Intercom app ID

# ==========================================
# UI Configuration
# ==========================================

# Theme
VITE_DEFAULT_THEME=light  # Options: light, dark

# Locale
VITE_DEFAULT_LOCALE=en  # Options: en, zh, ja, ko

# Items per page
VITE_ITEMS_PER_PAGE=20

# ==========================================
# WebSocket Configuration (Optional)
# ==========================================

# Real-time updates
VITE_WS_URL=ws://localhost:8080/ws
# Production example: wss://api.peoplecoin.com/ws

VITE_WS_RECONNECT_INTERVAL=3000  # milliseconds
VITE_WS_MAX_RETRIES=5

# ==========================================
# Development Only
# ==========================================

# Mock data (DEV ONLY!)
VITE_USE_MOCK_DATA=false

# Skip wallet connection (DEV ONLY!)
VITE_SKIP_WALLET_CHECK=false

# API request logging
VITE_LOG_API_REQUESTS=false

# ==========================================
# Production Checklist
# ==========================================
# Before deploying to production, ensure:
# - [ ] Set VITE_API_URL to production backend URL
# - [ ] Set NODE_ENV=production
# - [ ] Set VITE_SUI_NETWORK to mainnet
# - [ ] Added analytics tokens (GA, Mixpanel)
# - [ ] Configured error tracking (Sentry)
# - [ ] Disabled debug features (VITE_DEBUG_MODE, VITE_USE_MOCK_DATA)
# - [ ] Tested all wallet connections
# - [ ] Verified all feature flags
