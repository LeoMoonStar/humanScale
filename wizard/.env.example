# Sui Network Configuration
# Copy this file to .env and fill in your values

# Private key for deployment (base64 encoded)
# Generate with: sui keytool generate ed25519
DEPLOYER_PRIVATE_KEY=

# Network RPC URLs
SUI_TESTNET_RPC=https://fullnode.testnet.sui.io:443
SUI_MAINNET_RPC=https://fullnode.mainnet.sui.io:443
SUI_LOCAL_RPC=http://127.0.0.1:9000

# Default network (testnet, mainnet, localnet)
DEFAULT_NETWORK=testnet

# Platform Contract Addresses (filled after platform initialization)
PLATFORM_VAULT_ID=
INSURANCE_POOL_ID=

# PeopleCoin Package ID (main contracts package)
# Testnet: Fill after deploying contracts
# Mainnet: Fill after deploying contracts
PEOPLECOIN_PACKAGE_ID_TESTNET=
PEOPLECOIN_PACKAGE_ID_MAINNET=
PEOPLECOIN_PACKAGE_ID_LOCAL=

# Gas Budget Settings (in MIST)
GAS_BUDGET_PUBLISH=100000000
GAS_BUDGET_TRANSACTION=10000000

# Platform Configuration Defaults
PLATFORM_VAULT_INITIAL_FUND=100000000000
PLATFORM_VAULT_CREDIT_LIMIT=500000000
INSURANCE_POOL_INITIAL_FUND=1000000000000
INSURANCE_POOL_MIN_RESERVE=50000000
